.container.mt-2
	.row
		.col-4
			= image_tag current_user.avatar, width: '150', height: '250', class: "rounded mb-3" if current_user.avatar.present?
			%br
			= current_user.full_name
			%br
			= current_user.email
			%br
			= current_user.date_of_birth.strftime("%d %B %Y") if current_user.date_of_birth.present?
			%br
			=current_user.country
			%br
			= link_to 'Edit Account', edit_user_registration_path, class: 'btn btn-primary'

		.col-8
			%h3 My Bicycles
			-	current_user.bicycles.each do |bike|
				= link_to bike.name, bicycle_path(bike)
				%br

			= link_to "New bike", new_bicycle_path, class: 'btn btn-primary mt-2 ml-3'